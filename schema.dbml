// Lift Maintenance Service Database Schema
// Generated from JPA entities

// Main lift entity
Table lift {
  id bigint [pk, increment]
  name varchar
  area varchar
  building varchar
  installation_date date
  client_name varchar
  client_phone varchar
  client_email varchar
  maintenance_interval integer
  next_maintenance_date date
}

// Alert recipients for notifications
Table alert_recipient {
  id bigint [pk, increment]
  name varchar
  email varchar
  phone varchar
  active boolean [default: true]
}

// Reminder settings for lifts
Table reminder_setting {
  id bigint [pk, increment]
  lift_id bigint
  reminder_timing integer
  notification_method varchar
}

// Relationships
Ref: reminder_setting.lift_id > lift.id

// Indexes for better performance
Index: {
  name: idx_lift_next_maintenance
  on: lift(next_maintenance_date)
}

Index: {
  name: idx_alert_recipient_active
  on: alert_recipient(active)
}

Index: {
  name: idx_reminder_setting_lift
  on: reminder_setting(lift_id)
}

// Notes:
// - lift table stores all lift information with maintenance schedules
// - alert_recipient stores global notification recipients (all active recipients receive maintenance alerts)
// - reminder_setting defines when and how to send reminders for each lift
// - The system supports both H2 and PostgreSQL databases
